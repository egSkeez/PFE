                    				 <rich:columnGroup>
                            <rich:column rowspan="1" colspan="6">
                               <h:outputText value="#{msg.listHistorique}" />
                            </rich:column>
                            <rich:column rowspan="1" colspan="1" breakBefore="true" width="10%" >
                               <h:outputText value="#{msg.Reference}" />
