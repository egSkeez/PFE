										</h:panelGrid>
									</td>
								</tr>
							</table>
							</rich:simpleTogglePanel>
							<rich:simpleTogglePanel switchType="client" label="Courrier : #{courrierDetailsPartageBean.cr.courrier.courrierReferenceCorrespondant}" styleClass="xteEnregistrementLabelOutput"
